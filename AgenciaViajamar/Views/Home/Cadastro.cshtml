<main>
       
        <div class="container" style="min-height: calc(100vh - 56px);display: flex;flex-direction: column;justify-content: center;align-content: center">
        <h4 class="d-block text-center">Crie um novo cadastro</h4>
        <form action="">
            <div class="input-group mt-2">
                <input type="text" class="form-control bg-light btn-outline-secondary" placeholder="Nome completo">
            </div>
            <div class="input-group mt-2">
                <input type="text" class="form-control bg-light btn-outline-secondary" placeholder="Email">
            </div>
            <div class="input-group mt-2">
                <input type="text" class="form-control bg-light btn-outline-secondary" placeholder="Login">
            </div>
            <div class="input-group mt-2">
                <input type="password" class="form-control bg-light btn-outline-secondary" placeholder="******">
            </div>
            <br>
            <div class="form-group form-check">
                <button type="button" class="btn btn-secondary btn-lg btn-block" style="width: calc(100% + 18px) !important;margin-left: 0 !important;position: relative;left: -18px;">Cadastrar</button>
            </div>
        </form>
        </div>
    </main>
