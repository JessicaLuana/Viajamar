@model IEnumerable<AgenciaViajamar.Models.Compras>

@{
    ViewData["Title"] = "Index";
}

<h1>Compras</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                IDCompra
            </th>
            <th>
                IDComprador
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idComprador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
